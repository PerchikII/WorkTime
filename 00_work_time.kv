<TimeSpinner@Spinner>
    size_hint: 1, 1
    pos_hint: {"right":1,"top":1}
    font_size: 30

<Pages>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        BoxLayout:
            size_hint: 1, .1
            BoxLayout:
                spacing:10
                padding: [20,10,20,0]
                Spinner:
                    id: day
                    size_hint: 1, 1
                    pos_hint: {"top":1}
                    font_size: 50
                    text: root.day_spinner_str
                    values: map(str,list(range(1,32)))
                    on_text: root.create_a_date_for_label()

                Spinner:
                    id: month
                    pos_hint: {"left":1,"top":1}
                    size_hint: 1, 1
                    font_size: 40
                    text: root.month_spinner_str
                    values: root.spinner_month_lst
                    on_text: root.create_a_date_for_label()

            BoxLayout:
                orientation: "vertical"
                padding:[20,10,20,0]
                Label:
                    size_hint: 1, 1
                    font_size: 25
                    text: "установите НАЧАЛО\n      рабочего дня"
                    color: 0,0,0
                BoxLayout:
                    TimeSpinner:
                        id: startworkhour
                        text: "00" #root.hours_start_work
                        values: [str(x) for x in range(1,25)]
                        on_text: root.create_start_work_time(self)
                    Label:
                        size_hint: .1, 1
                        pos_hint: {"right":1,"bottom":1}
                        font_size: 50
                        text: ":"
                        color: 0,0,0

                    TimeSpinner:
                        id: startworkminute
                        text: root.minutes_start_work
                        values: [str(x).zfill(2) for x in range(0,60)]
                        on_text: root.create_start_work_time(self)


        BoxLayout:
            padding: [20,0,0,0]
            id: box_time_lunch_endwork_root
            size_hint: 1,.1
            BoxLayout:
                orientation: "vertical"
                id: lunch_time_box
                size_hint: 1,1
                Label:
                    id: label_start_lunch
                    size_hint: 1,1
                    font_size: 25
                    pos_hint: {"top":1}
                    text: "установите НАЧАЛО ОБЕДА"
                    color: 0,0,0
                BoxLayout:
                    TimeSpinner:
                        id: hourstartlunch
                        text: root.hours_start_lunch
                        values: [str(x) for x in range(1,25)]
                        on_text: root.create_start_work_time(self)

                    Label:
                        size_hint: .1, 1
                        pos_hint: {"right":1,"top":1}
                        font_size: 50
                        text: ":"
                        color: 0,0,0

                    TimeSpinner:
                        id: minutestartlunch
                        text: root.minutes_start_lunch
                        values: [str(x).zfill(2) for x in range(0,60)]
                        on_text: root.create_start_work_time(self)

            BoxLayout:
                id: box_time_end
                orientation: "vertical"
                padding:[20,10,20,0]
                size_hint: 1,1
                Label:
                    size_hint: 1, 1
                    font_size: 25
                    text: "установите КОНЕЦ\n      рабочего дня"
                    color: 0,0,0
                BoxLayout:
                    TimeSpinner:
                        id: hourendwork
                        text: root.hours_end_work
                        values: [str(x) for x in range(1,25)]
                        on_text: root.create_start_work_time(self)

                    Label:
                        size_hint: .1, 1
                        pos_hint: {"right":1,"top":1}
                        font_size: 50
                        text: ":"
                        color: 0,0,0



                    TimeSpinner:
                        id: minutesendwork
                        text: root.minutes_end_work
                        values: [str(x).zfill(2) for x in range(0,60)]
                        on_text: root.create_start_work_time(self)

        BoxLayout:
            size_hint: 1,.1
            BoxLayout:
                orientation: "vertical"
                padding:[20,10,20,0]
                Label:
                    id: label_end_lunch
                    size_hint: 1, 1
                    font_size: 25
                    text: "установите КОНЕЦ ОБЕДА"
                    color: 0,0,0
                BoxLayout:
                    TimeSpinner:
                        id: hoursendlunch
                        text: root.hours_end_lunch
                        values: [str(x) for x in range(1,25)]
                        on_text: root.create_start_work_time(self)

                    Label:
                        size_hint: .1, 1
                        pos_hint: {"right":1,"bottom":1}
                        font_size: 50
                        text: ":"
                        color: 0,0,0


                    TimeSpinner:
                        id: minutesendlunch
                        text: root.minutes_end_lunch
                        values: [str(x).zfill(2) for x in range(0,60)]
                        on_text: root.create_start_work_time(self)


            Label:
                id:label_data
                text_size: self.size
                valign: "bottom"
                halign: "center"
                size_hint:1,1
                pos_hint:{'center_x':.5,"top":1}
                text: "На дату:\n"+' '.join(root.label_month_lst)
                color: 0,0,0
                font_size: 30
        BoxLayout:
            padding:[20,0,20,0]
            size_hint:1,.1
            Label:
                size_hint:.8,1
                text: root.lab_save_txt
                text_size: self.size
                valign: "center"
                halign: "left"
                font_size: 50
                color: 0,0,0
            Label:
                size_hint:.2,1
                text_size: self.size
                valign: "center"
                halign: "center"
                text: root.total_hours_work
                font_size: 50
                color: 0,0,0
            Label:
                size_hint:.2,1
                text_size: self.size
                valign: "center"
                halign: "center"
                text: "Часов"
                font_size: 30
                color: 0,0,0
            Label:
                size_hint:.2,1
                text_size: self.size
                valign: "center"
                halign: "center"
                text: root.total_minutes_work
                font_size: 50
                color: 0,0,0
            Label:
                size_hint:.2,1
                text_size: self.size
                valign: "center"
                halign: "center"
                text: "Минут"
                font_size: 30
                color: 0,0,0
        BoxLayout:
            size_hint:1,.045
            padding:20
            Button:
                id: btn_save_file
                size_hint:1,1
                pos_hint:{'center_x':.5,"top":1}
                text: "Сохранить"
                font_size: 30
                on_press: root.validate_file_time_work()#;root.load_next()
            Button:
                size_hint:1,1
                pos_hint:{'center_x':.5,"top":1}
                text: "Выход"
                font_size: 30
                on_press: app.quit_program()

<Pages>:
    BoxLayout:
        orientation: "vertical"
        size:root.size
        BoxLayout:
            size_hint: 1, .1
            Label:
                text: 'Отработано за период:'
                font_size: 50
                size_hint: 1, 1
                text_size:self.size
                halign:"center"
                color: 0,0,0
        BoxLayout:
            padding: [100,0,100,0]
            spacing: 20
            size_hint: 1, .055
            BoxLayout:
                TimeSpinner:
                    id: from_total_days
                    size_hint: .1, 1
                    text: root.from_total_days_spinner
                    values: root.list_from_total_days
                    on_text: root.create_statistic_date(self)

                TimeSpinner:
                    id: from_total_month
                    size_hint: .4, 1
                    text: root.from_total_month_spinner
                    values: root.spinner_month_statistic_lst
                    on_text: root.create_statistic_date(self)
                TimeSpinner:
                    id: to_total_days
                    size_hint: .1, 1
                    text: root.to_total_days_spinner
                    values: root.list_to_total_days
                    on_text: root.create_statistic_date(self)
        BoxLayout:
            size_hint: 1,.055
            Label:
                text: "Часов"
                text_size:self.size
                halign:"center"
                font_size: 50
                size_hint: 1, 1
                color: 0,0,0
            Label:
                text: "Минут"
                text_size:self.size
                halign:"center"
                font_size: 50
                size_hint: 1, 1
                color: 0,0,0

        BoxLayout:
            size_hint: 1,.1
            Label:
                id: tot_hours_statistic
                text: root.total_hours_work_statistic
                text_size:self.size
                halign:"center"
                valign:"top"
                font_size: 50
                size_hint: 1, 1
                color: 0,0,0
            Label:
                id: tot_minutes_statistic
                text: root.total_minutes_work_statistic
                text_size:self.size
                halign:"center"
                valign:"top"
                font_size: 50
                size_hint: 1, 1
                color: 0,0,0
        BoxLayout:
            size_hint: 1,.2





