<BoxLayout_top_btn@BoxLayout>:
    orientation:'horizontal'
    spacing:30
    size_hint_y:.1
<Button_next_screen@Button>:
    size_hint: .22,None
    size:0,30
    text:'next screen'
<Button_info@Button>:
    text:'info'
    size_hint: .22,None
    size:0,30
<GridButton@Button>:
    font_size: 50



<Main>:
    BoxLayout:
        padding:10
        orientation:'vertical'
        BoxLayout_top_btn:
            Button_next_screen:
                on_press:root.manager.current=str(root.manager.next())
            Button_info:
                on_press:root.create_info()

        Label:
            halign: "center"
            markup: True
            multiline:True
            size_hint:(1,None)
            font_size:20
            text: root.showcoord_btn


        ScrollView:
            size_hint_y:.9
            FloatLayout:
                id:my_box
                size_hint_y:None
                height:1000
                canvas:
                    Color:
                        rgb:(115/255,115/255,115/255)
                    Rectangle:
                        pos: self.pos
                        size: self.size

<Second>:
    BoxLayout:
        padding:10
        orientation:'vertical'
        BoxLayout_top_btn:
            Button_next_screen:
                on_press:root.manager.current=str(root.manager.next())

            Button:
                text:'Ориентация'
                on_release:root.change_orient()
                size_hint:.22,None
                size:0,30
            Button_info:
                on_press:root.create_info()
        Label:
            text:root.orient_box
            size_hint:(1,.2)
            font_size: 20
            markup: True

        BoxLayout:
            spacing:10
            orientation:root.change_orient_box
            BoxLayout:
                spacing:10
                Button:
                    text:'button 1'
                Button:
                    text:'button 2'
            Button:
                text:'button 3'
            Button:
                text:'button 4'


